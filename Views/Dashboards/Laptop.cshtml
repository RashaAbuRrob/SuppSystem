@model IEnumerable<AspnetCoreMvcFull.ViewModels.LaptopViewModel>

@{
    ViewData["Title"] = "أجهزة اللابتوب";
}

@section VendorStyles {
    <link rel="stylesheet" href="~/vendor/libs/bootstrap/css/bootstrap.min.css" />
}

@section VendorScripts {
    <script src="~/vendor/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
}

@section PageStyles {
    <style>
        /* Border styles for table, rows, and cells */
        .table, .table th, .table td {
            border: 1px solid #ddd !important;
        }

        tr.clickable-row {
            cursor: pointer;
        }

        .table tbody tr.clickable-row:hover {
            border: 2px solid rgba(0, 123, 255, 0.6) !important;
        }
    </style>
}

@section PageScripts {
    <script src="~/js/dashboards-analytics.js"></script>
}

<div style="direction:rtl">
    <a href="/Dashboards/AddLaptop" class="btn btn-primary">إضافة جهاز جديد</a>
    <br />
    <br />
    <div class="card">
        <h5 class="card-header">أجهزة اللابتوب</h5>
        <div class="card-body">
            <div class="table-responsive text-nowrap">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ماركة الجهاز</th>
                            <th>موديل الجهاز</th>
                            <th>المختبر</th>
                            <th>الرقم التسلسلي</th>
                            <th>RAM</th>
                            <th>Processor</th>
                            <th>Barcode</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @if (Model != null && Model.Any())
                        {
                            var rowClasses = new[] { "table-default", "table-active", "table-primary", "table-secondary", "table-success", "table-danger", "table-warning", "table-info" };
                            var rowIndex = 0;

                            @foreach (var laptop in Model)
                            {
                                var rowClass = rowClasses[rowIndex % rowClasses.Length];
                                rowIndex++;

                                <tr class="clickable-row @rowClass" style="cursor: pointer;" onclick="window.location.href='@Url.Action("EditDesktop", "Dashboards", new { id = laptop.ID})'">
                                    <td>@laptop.BrandName</td>
                                    <td>@laptop.ModelName</td>
                                    <td>@laptop.LabID</td>
                                    <td>@laptop.SerialNumber</td>
                                    <td>@laptop.Ram</td>
                                    <td>@laptop.Processor</td>
                                    <td>@laptop.Barcode</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8">لا يوجد أجهزة في مدرستك</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

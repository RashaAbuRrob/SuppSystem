@model AspnetCoreMvcFull.ViewModels.RegistrationViewModel

@{
    Layout = "_BlankLayout";
}

@section PageStyles {
    <link rel="stylesheet" href="~/vendor/css/pages/page-auth.css">
}

<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner">
            <!-- Register Card -->
            <div class="card px-sm-6 px-0">
                <div class="card-body">
                    <!-- Logo -->
                    <div class="app-brand justify-content-center mb-6">
                        <a href="/" class="app-brand-link gap-2">
                            <span class="app-brand-logo demo">
                                <img src="~/assets/img/ministrylogo.png" alt="App Logo">
                            </span>
                            <h3 style="direction:rtl" class="mb-2"> قسم التجهيزات </h3>
                        </a>
                    </div>
                    <!-- /Logo -->

                    <h4 style="direction:rtl" class="mb-2">تسجيل مستخدم جديد</h4>
                    <p style="direction:rtl" class="mb-6">سجل عن طريق الرقم الوزاري</p>

                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger" style="direction: rtl;">
                            @ViewBag.ErrorMessage
                        </div>
                    }
                    @if (ViewBag.SuccessMessage != null)
                    {
                        <div class="alert alert-success" style="direction: rtl;">
                            @ViewBag.SuccessMessage
                        </div>
                    }

                    <form id="formAuthentication" class="mb-6" asp-action="RegisterBasic" method="post" novalidate>
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <!-- Ministrial Number -->
                        <div style="direction:rtl" class="mb-3">
                            <label for="MinistrialNumber" class="form-label">الرقم الوزاري</label>
                            <input type="text" class="form-control" id="MinistrialNumber" name="MinistrialNumber" placeholder="أدخل الرقم الوزاري" required>
                            <span asp-validation-for="MinistrialNumber" class="text-danger"></span>
                        </div>

                        <!-- Name -->
                        <div style="direction:rtl" class="mb-3">
                            <label for="Name" class="form-label">الاسم</label>
                            <input type="text" class="form-control" id="Name" name="Name" placeholder="أدخل اسمك" required>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Phone -->
                        <div style="direction:rtl" class="mb-3">
                            <label for="Phone" class="form-label">رقم الهاتف</label>
                            <input type="text" class="form-control" id="Phone" name="Phone" placeholder="أدخل رقم هاتفك" required>
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div style="direction:rtl" class="mb-3">
                            <label for="Password" class="form-label">كلمة المرور</label>
                            <div style="direction:ltr" class="input-group input-group-merge">
                                <input type="password" id="Password" class="form-control" name="Password" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" required>
                                <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Confirm Password -->
                        <div style="direction:rtl" class="mb-3">
                            <label for="ConfirmPassword" class="form-label">تأكيد كلمة المرور</label>
                            <div style="direction:ltr" class="input-group input-group-merge">
                                <input type="password" id="ConfirmPassword" class="form-control" name="ConfirmPassword" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" required>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- User Type -->
                        <div style="direction:rtl" class="mb-3">
                            <label for="UserTypeID" class="form-label">نوع المستخدم</label>
                            <select class="form-control" id="UserTypeID" name="UserTypeID" required>
                                <option value="" disabled selected>اختر نوع المستخدم</option>
                                <option value="1">ادمن نظام</option>
                                <option value="2">رئيس قسم تكنولوجيا معلومات</option>
                                <option value="3">قيم مختبر حاسوب</option>
                            </select>
                            <span asp-validation-for="UserTypeID" class="text-danger"></span>
                        </div>

                        <!-- Regions -->
                        <div style="direction:rtl" class="mb-3 user-role-dependent" id="region-container" style="display:none;">
                            <label for="RegionID" class="form-label">المنطقة</label>
                            <select class="form-control" id="RegionID" name="RegionID">
                                <option value="" disabled selected>اختر المنطقة</option>
                                @foreach (var region in Model.Regions)
                                {
                                    <option value="@region.Value">@region.Text</option>
                                }
                            </select>
                            <span asp-validation-for="RegionID" class="text-danger"></span>
                        </div>

                        <!-- Directorates -->
                        <div style="direction:rtl" class="mb-3 user-role-dependent" id="directorate-container" style="display:none;">
                            <label for="DirectorateID" class="form-label">المديرية</label>
                            <select class="form-control" id="DirectorateID" name="DirectorateID">
                                <option value="" disabled selected>اختر المديرية</option>
                            </select>
                            <span asp-validation-for="DirectorateID" class="text-danger"></span>
                        </div>

                        <!-- Schools -->
                        <div style="direction:rtl" class="mb-3 user-role-dependent" id="school-container" style="display:none;">
                            <label for="NationalID" class="form-label">المدرسة</label>
                            <select class="form-control" id="NationalID" name="NationalID">
                                <option value="" disabled selected>اختر المدرسة</option>
                            </select>
                            <span asp-validation-for="NationalID" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary d-grid w-100">تسجيل</button>
                        </div>
                    </form>

                    <p class="text-center">
                        <span>لديك حساب؟</span>
                        <a href="@Url.Action("LoginBasic", "Auth")">
                            <span>سجل الدخول الآن</span>
                        </a>
                    </p>
                </div>
            </div>
            <!-- /Register Card -->
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Show/Hide form fields based on UserTypeID
            $('#UserTypeID').change(function () {
                var userType = $(this).val();
                if (userType == "2" || userType == "3") { // Show regions and directorates for DepartmentHead and LabTechnician
                    $('#region-container').show();
                    $('#directorate-container').show();
                } else {
                    $('#region-container').hide();
                    $('#directorate-container').hide();
                    $('#school-container').hide();
                }

                if (userType == "3") { // Show schools for LabTechnician
                    $('#school-container').show();
                } else {
                    $('#school-container').hide();
                }
            });

            // Populate Directorates and Schools dynamically
            $('#RegionID').change(function () {
                var regionID = $(this).val();
                $.getJSON('@Url.Action("GetDirectorates", "Auth")', { regionId: regionID }, function (data) {
                    var directorateSelect = $('#DirectorateID');
                    directorateSelect.empty();
                    directorateSelect.append('<option value="" disabled selected>اختر المديرية</option>');
                    $.each(data, function (index, item) {
                        directorateSelect.append('<option value="' + item.value + '">' + item.text + '</option>');
                    });
                });
            });

            $('#DirectorateID').change(function () {
                var directorateID = $(this).val();
                $.getJSON('@Url.Action("GetSchools", "Auth")', { directorateId: directorateID }, function (data) {
                    var schoolSelect = $('#NationalID');
                    schoolSelect.empty();
                    schoolSelect.append('<option value="" disabled selected>اختر المدرسة</option>');
                    $.each(data, function (index, item) {
                        schoolSelect.append('<option value="' + item.value + '">' + item.text + '</option>');
                    });
                });
            });
        });
    </script>
}
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

    
      @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    
}


